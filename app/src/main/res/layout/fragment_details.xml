<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".DetailsFragment">

    <ScrollView
        android:id="@+id/details_activit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_park_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_park_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/details_viewpager"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="111dp"
                android:layout_height="30dp"
                android:text="@string/description"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Activities"
                android:layout_width="111dp"
                android:layout_height="30dp"
                android:text="@string/activities"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/topics"
                android:layout_width="64dp"
                android:layout_height="30dp"
                android:text="@string/topics"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview" />

            <TextView
                android:id="@+id/entrance_fees"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="@string/entrance_fees"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_entrance_fees"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/operating_hours"
                android:layout_width="114dp"
                android:layout_height="30dp"
                android:text="@string/operating_hours"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_operating_hours"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/directions"
                android:layout_width="113dp"
                android:layout_height="30dp"
                android:text="@string/directions"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_directions"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>